{
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false
  },
  "extends": "google",
  "rules": {
    "require-jsdoc": "off"
  },
  "globals": {
    "jQuery": "readonly",
    "wp": "readonly"
  },
  "overrides": [
    {
      "files": ["src/blocks/**/*.js"],
      "extends": "plugin:@wordpress/eslint-plugin/recommended-with-formatting",
      "rules": {
        "indent": ["error", 2],
        "react/jsx-indent": ["error", 2],
        "react/jsx-indent-props": ["error", 2]
      }
    }
  ]
}
