{
  "env": {
    "browser": true,
    "jquery": true
  },
  "globals": {
    "phpVars": "readonly"
  },
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "requireConfigFile": false
  },
  "extends": [
    "eslint:recommended",
    "google"
  ],
  "rules": {
    "require-jsdoc": "off"
  },
  "overrides": [
    {
      "files": ["tasks/*.js"],
      "env": {
        "node": true,
        "es6": true
      }
    },
    {
      "files": ["src/blocks/**/*.js"],
      "extends": "plugin:@wordpress/eslint-plugin/recommended-with-formatting",
      "rules": {
        "indent": ["error", 2],
        "no-unused-vars": ["warn"],
        "react/jsx-indent": ["error", 2],
        "react/jsx-indent-props": ["error", 2]
      }
    }
  ]
}
