<?xml version="1.0"?>
<ruleset name="GrayscaleScaffoldingRules">
  <rule ref="WordPress">
    <exclude name="PEAR.Functions.FunctionCallSignature.SpaceAfterOpenBracket"/>
    <exclude name="PEAR.Functions.FunctionCallSignature.SpaceBeforeCloseBracket"/>
    <exclude name="Squiz.Commenting.FileComment"/>
    <exclude name="Squiz.WhiteSpace.ControlStructureSpacing"/>
    <exclude name="WordPress.PHP.YodaConditions"/>
    <exclude name="WordPress.WhiteSpace.ControlStructureSpacing"/>
    <exclude name="WordPress.WhiteSpace.OperatorSpacing"/>
  </rule>

  <rule ref="PSR12">
    <exclude name="Generic.WhiteSpace.DisallowTabIndent"/>
  </rule>

  <rule ref="Generic.WhiteSpace.ArbitraryParenthesesSpacing">
    <properties>
      <property name="spacing" value="0"/>
    </properties>
  </rule>

  <rule ref="NormalizedArrays.Arrays.ArrayBraceSpacing">
    <properties>
      <property name="spacesSingleLine" value="0"/>
    </properties>
  </rule>

  <rule ref="Squiz.Functions.FunctionDeclarationArgumentSpacing">
    <properties>
      <property name="requiredSpacesAfterOpen" value="0"/>
      <property name="requiredSpacesBeforeClose" value="0"/>
    </properties>
  </rule>

  <rule ref="Squiz.PHP.DisallowMultipleAssignments">
    <type>warning</type>
  </rule>

  <rule ref="WordPress.Files.FileName">
    <properties>
      <property name="is_theme" value="true"/>
      <property name="strict_class_file_names" value="false"/>
    </properties>
  </rule>

  <rule ref="WordPress.WP.GlobalVariablesOverride">
    <properties>
      <property name="treat_files_as_scoped" value="true"/>
    </properties>
  </rule>
</ruleset>
